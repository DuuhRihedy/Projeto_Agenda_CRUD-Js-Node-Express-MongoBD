<%- include('includes/head') %>
<%- include('includes/navbar') %>

<div class="container text-center">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-5">
      <h1 class="text-center">Entrar ou Criar conta</h1>
      <p class="text-center lead">Faça login ou crie sua conta abaixo</p>
      <%- include('includes/messages.ejs'); %>
    </div>
    <div class="row">
      <div class="col-lg">
        <h4>Faça seu cadastro</h4>
        <p>Se voce ainda não tem conta, preencha o formulário abaixo</p>

        <form class="form-cadastro" action="/login/register" method="post">
          <input type="hidden" name="_csrf" value=<%= csrfToken %>>
          <div class="form-group">
            <label for="email">Seu e-mail</label>
            <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp" placeholder="Enter email">
          </div>
          <div class="form-group">
            <label for="password">Crie sua Senha</label>
            <input type="password" class="form-control" id="password" name="password" aria-describedby="emailHelp">
          </div>
          <button type="submit" class="btn btn-primary my-4">Criar minha conta</button>
        </form>

      </div>
      <div class="col-lg">
        <h4>Fazer login</h4>
        <p>Se você ja possui uma conta faça login abaixo</p>

        <form class="form-login" action="/login/login" method="post">
          <input type="hidden" name="_csrf" value=<%= csrfToken %>>
          <div class="form-group">
            <label for="email">Seu e-mail</label>
            <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp" placeholder="Enter email">
          </div>
          <div class="form-group">
            <label for="password">Sua Senha</label>
            <input type="password" class="form-control" id="password" name="password" aria-describedby="emailHelp">
          </div>
          <button type="submit" class="btn btn-primary my-4">Entrar</button>
        </form>

      </div>
    </div>
    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>